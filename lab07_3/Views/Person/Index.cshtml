@model IEnumerable<lab07_3.Controllers.Person>

@{
    ViewBag.Title = "List of People";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Person</h2>

@using (Html.BeginForm())
{
    <b>Tim kiem: </b> <text>RollNo</text> @Html.TextBox("RollNo")
    <input type="submit" name="submit" value="Tim" />

}
@using (Html.BeginForm())
{
    <b>Tim kiem: </b> <text>Name</text> @Html.TextBox("Name")
    <input type="submit" name="submit" value="Tim" />

}
@using (Html.BeginForm())
{
    <b>Tim kiem: </b> <text>Email</text> @Html.TextBox("Email")
    <input type="submit" name="submit" value="Tim" />

}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RollNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RollNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
